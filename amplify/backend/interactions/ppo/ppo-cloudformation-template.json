{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Lex chatbot creation from Amplify CLI",
    "Parameters": {
        "authRoleName": {
            "Type":  "String"
        },
        "unauthRoleName": {
            "Type":  "String"
        },
        "authRoleArn": {
            "Type":  "String"
        },
        "env": {
            "Type":  "String"
        }
    },
    "Metadata": {
        "AWS::CloudFormation::Interface": {
            "ParameterGroups": [
                {
                    "Label": {
                        "default": "Creating lex chatbot"
                    },
                    "Parameters": [
                        "inputs"
                    ]
                }
            ]
        }
    },
    "Conditions": {
        "ShouldNotCreateEnvResources": {
            "Fn::Equals": [
                {
                    "Ref": "env"
                },
                "NONE"
            ]
        }
    },
    "Resources": {
        "LambdaFunction": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Handler": "index.handler",
                    "FunctionName": {
                    "Fn::If": [
                        "ShouldNotCreateEnvResources",
                        "new_order_cfnlambda_1964613e", 
                        {

                            "Fn::Join": [
                                "",
                                [
                                    "new_order_cfnlambda_1964613e",
                                    "-",
                                    {
                                        "Ref": "env"
                                    }
                                ]
                            ]
                        }
                    ]
                },
                "Role": { "Fn::GetAtt" : ["LambdaExecutionRole", "Arn"] },
                "Environment": {"Variables" : { "ENV": {"Ref": "env"}}},
                "Runtime": "nodejs10.x",
                "Timeout": "300"
            }
        },
        
        "LambdaExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {
                    "Fn::If": [
                        "ShouldNotCreateEnvResources",
                        "lexLambdaRole1964613e", 
                        {

                            "Fn::Join": [
                                "",
                                [
                                    "lexLambdaRole1964613e",
                                    "-",
                                    {
                                        "Ref": "env"
                                    }
                                ]
                            ]
                        }
                    ]
                },
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Policies": [
                    {
                        "PolicyName": "cloudWatchPolicy1964613e",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Resource": "arn:aws:logs:*:*:*"
                                }
                            ]
                        }
                    },
                    {
                        "PolicyName": "lexPolicy1964613e",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "lex:*"
                                    ],
                                    "Resource": "*"
                                }
                            ]
                        }
                    },
                    {
                        "PolicyName": "IAMPolicy",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "iam:*"
                                    ],
                                    "Resource": "*"
                                }
                            ]
                        }
                    },
                    {
                        "PolicyName": "lambdaPolicy1964613e",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "lambda:*"
                                    ],
                                    "Resource": "*"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "LambdaFunctionOutputs1964613e": {
            "Type": "Custom::LambdaCallout",
            "Properties": {
                "ServiceToken": {
                    "Fn::GetAtt": [
                        "LambdaFunction",
                        "Arn"
                    ]
                }
            }
        },
        "CognitoUnauthPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
              "PolicyName": "lex_amplify_1964613e",
              "Roles": [ 
                {"Ref": "unauthRoleName" }
              ],
              "PolicyDocument": {
                "Version": "2012-10-17",
                "Statement": [ 
                    {
                        "Action": [
                            "lex:PostContent",
                            "lex:PostText"
                        ],
                        "Effect": "Allow",
                        "Resource": [
                            {

                                "Fn::Join": [
                                    "",
                                    [
                                      "arn:aws:lex:",
                                      {
                                        "Ref": "AWS::Region"
                                      },
                                      ":",
                                      { "Fn::Select" : [ "4", { "Fn::Split": [":", {"Ref": "authRoleArn"}]}]},
                                      ":bot:",
                                      {
                                        "Fn::If": [
                                            "ShouldNotCreateEnvResources",
                                            "BookTrip", 
                                            {

                                                "Fn::Join": [
                                                    "",
                                                    [
                                                        "BookTrip",
                                                        "_",
                                                        {
                                                            "Ref": "env"
                                                        }
                                                    ]
                                                ]
                                            }
                                        ]
                                      },
                                      ":*"
                                    ]
                                ]
                            }
                        ]
                    }
                ]
              }
            }
        },
        "CognitoAuthPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyName": "lex_amplify_1964613e",
              "Roles": [ 
                {"Ref": "authRoleName" }
              ],
              "PolicyDocument": {
                "Version": "2012-10-17",
                "Statement": [
                    {
                        "Action": [
                            "lex:PostContent",
                            "lex:PostText"
                        ],
                        "Effect": "Allow",
                        "Resource": [
                            {

                                "Fn::Join": [
                                    "",
                                    [
                                      "arn:aws:lex:",
                                      {
                                        "Ref": "AWS::Region"
                                      },
                                      ":",
                                      { "Fn::Select" : [ "4", { "Fn::Split": [":", {"Ref": "authRoleArn"}]}]},
                                      ":bot:",
                                      {
                                        "Fn::If": [
                                            "ShouldNotCreateEnvResources",
                                            "BookTrip", 
                                            {

                                                "Fn::Join": [
                                                    "",
                                                    [
                                                        "BookTrip",
                                                        "_",
                                                        {
                                                            "Ref": "env"
                                                        }
                                                    ]
                                                ]
                                            }
                                        ]
                                      },
                                      ":*"
                                    ]
                                ]
                            }
                        ]
                    }
                ]
              }
            }
        }
    },
    "Outputs": {
        "Region": {
            "Value": {
                "Ref": "AWS::Region"
            }
        },
        "BotName":  {
            "Value": {
                "Fn::If": [
                    "ShouldNotCreateEnvResources",
                    "BookTrip", 
                    {

                        "Fn::Join": [
                            "",
                            [
                                "BookTrip",
                                "_",
                                {
                                    "Ref": "env"
                                }
                            ]
                        ]
                    }
                ]
            }
        },
        "FunctionArn": {
            "Value": {
                "Fn::GetAtt": [
                    "LambdaFunction",
                    "Arn"
                ]
            }
        }
    }
}